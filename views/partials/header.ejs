<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <link rel="stylesheet" href="/uikit-3.6.22/css/uikit-rtl.min.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/28.0.0/classic/ckeditor.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/styles.css">

    <title>Document</title>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation" style="border-bottom: 2px solid cornflowerblue;">
        <div class="container">

            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    <img src="images/Logo.png" width="28">
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    <a href="/" class="navbar-item">Home</a>
                    <a href="/blog" class="navbar-item">Blog</a>
                    <a href="/question" class="navbar-item">Forum</a>
                    <a class="navbar-item">About</a>
                    <!-- <a href="/q" class="navbar-item">f</a> -->
                    <a class="navbar-item">Contact</a>

                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                        Identify
                    </a>

                        <div class="navbar-dropdown">
                            <a class="navbar-item">
                            Chirman Speech
                        </a>
                            <a class="navbar-item">
                            Jobs
                        </a>
                            <a class="navbar-item">
                            Contact
                        </a>
                            <hr class="navbar-divider">
                            <a class="navbar-item">
                            Report an issue
                        </a>
                        </div>
                    </div>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">





                        <div class="buttons">
                            <% if(!currentUser) {%>
                                <a href="/login" class="button is-small">
                                    <strong>Login</strong>
                                </a>
                                <a href="/register" class="button uk-button-secondary is-small">
                                    <strong>Sign up</strong>
                                </a>

                                <% } else{%>

                                    <% if(currentUser && currentUser.isAdmin){ %>
                                        <a href="/dashboard" class="button uk-button-secondary is-small">
                                            <strong>Admin Dashboard</strong>
                                        </a>
                                        <% } %>
                                            <div class="navbar-item has-dropdown is-hoverable">

                                                <a class="button is-small ">
                                                    <i class="fas fa-user-circle" style="margin-right: 9px;"></i>
                                                    <strong>
                                               <%=currentUser.username  %>
                                           </strong>
                                                </a>

                                                <div class="navbar-dropdown">
                                                    <a class="navbar-item">
                                            Profile
                                        </a>
                                                    <a class="navbar-item" href="/myquestion">My Question</a>
                                                    </a>
                                                    <hr class="navbar-divider">
                                                    <a href="/logout" class="navbar-item">
                                            Logout
                                        </a>
                                                </div>
                                            </div>
                                            <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">

        <div class="columns">
            <div class="column"></div>
            <div class="column mt-2">
                <% if(success && success.length > 0){ %>
                    <div class="uk-alert-success" uk-alert>
                        <!-- <a class="uk-alert-close" uk-close></a> -->
                        <p class=" mr-3">
                            <%= success %>
                        </p>
                    </div>
                    <% } %>
                        <% if(error && error.length > 0){ %>

                            <div class="uk-alert-danger" uk-alert>
                                <!-- <a class="uk-alert-close" uk-close></a> -->
                                <p class=" mr-3">
                                    <%= error %>
                                </p>
                            </div>
                            <% } %>
            </div>
            <div class="column"></div>
        </div>

    </div>