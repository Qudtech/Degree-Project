    <section class="section mb-6">
        <div class="container">
            <div class="columns">

                <div class="column left-line">
                    <aside class="menu  ">
                        <p class="menu-label">
                            General
                        </p>
                        <ul class="menu-list">
                            <% if(currentUser) {%>
                                <li><a href="/dashboard">Dashboard</a></li>
                                <% } %>
                                    <li><a>Questions</a></li>
                                    <li><a>Ask question</a></li>
                        </ul>
