<%- include('./partials/header') -%>
    <!-- <div class="container" style="height: 100px; border: 2px solid; background-color: currentColor;">

    </div> -->
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">

                </div>
                <div class="column">
                    <div class="box pt-4 pl-5 pr-5" style="border: 1px solid #ccc;">

                        <form action="/register" method="post">
                            <div class="center mb-6" style="text-align: center;">
                                <img src="/images/Logo.png" width="50" alt=" " srcset=" "> <br> <strong>
                                    NSCIA
                                </strong>
                                <!-- <h4>NSCIA</h4> -->
                            </div>
                            <div class="field mt-4 ">
                                <p class="control has-icons-left has-icons-right ">
                                    <input class="input" name="username" type="Username " placeholder="Username: ">
                                    <span class="icon is-small is-left ">
                                <i class="fas fa-envelope "></i>
                              </span>
                                    <span class="icon is-small is-right ">
                                <i class="fas fa-check "></i>
                              </span>
                                </p>
                            </div>
                            <div class="field ">
                                <p class="control has-icons-left ">
                                    <input class="input " name="password" type="password " placeholder="Password ">
                                    <span class="icon is-small is-left ">
                                <i class="fas fa-lock "></i>
                              </span>
                                </p>
                            </div>
                            <div class="field ">
                                <p class="control has-icons-left ">
                                    <input class="input " name="isAdmin" type="password " placeholder="Admin code ... ">
                                    <span class="icon is-small is-left ">
                                <i class="fas fa-lock "></i>
                              </span>
                                </p>
                            </div>

                            <div class="field ">
                                <p class="control ">
                                    <button class="button is-success  " style="width: 100%; ">
                                Create Account
                              </button>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="column ">

                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer') -%>